---
// Component Imports
import Header from '../components/Header.svelte';
import Footer from '../components/Footer.astro';

const {title, bg, showDino} = Astro.props;

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta
			name="description"
			content="Unifying Communities of Rainier Valley through Arts and Culture"
		/>
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<link rel="manifest" href="/site.webmanifest">
    <title>{title} | RVCD</title>
    <!-- <link rel="stylesheet" type="text/css" href={Astro.resolve("../styles/global.css")}> -->
		<link rel="preload" href={Astro.resolve("../styles/global.css")} as="style" onload="this.onload=null;this.rel='stylesheet'">
		<noscript><link rel="stylesheet" href={Astro.resolve("../styles/global.css")}></noscript>
		<meta
			property="og:url"
			content="https://www.rainiervalleycreativedistrict.com{ Astro.request.url }"
		/>
		<meta property="og:type" content="website" />
		<meta property="og:title" content="Rainier Valley Creative District" />
		<meta
			property="og:description"
			content="Unifying Communities of Rainier Valley through Arts and Culture"
		/>
		<meta
			property="og:image"
			content="https://ik.imagekit.io/thegoldendino/rvcd/brand/logo-lg_uqHNphXcj.png?updatedAt=1636003240128&tr=w-1200,h-630,cm-pad_resize"
		/>
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
  </head>

  <body class="min-h-screen h-full flex flex-col">
		<header>
			<Header client:idle />
		</header>
		<main class={`flex-grow ${bg}`}>
			<slot/>
		</main>
		<footer>
			<Footer showDino={showDino} />
		</footer>
  </body>
</html>