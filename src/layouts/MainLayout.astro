---
import BaseLayout from '../layouts/BaseLayout.astro'
import Hero from '../components/Hero.astro'

const {title, heroImg} = Astro.props
---

<BaseLayout title={title}>
	<Hero title={title} img={heroImg} />
	<div class="w-full bg-gray-200 stack">
		<div class="wave-clip bg-gray-800 w-full opacity-20 h-60 sm:h-72 lg:h-96"></div>
		<div class="main z-10">
			<slot/>		
		</div>
	</div>
</BaseLayout>