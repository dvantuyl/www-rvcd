---
const {event} = Astro.props;
---

{(event.url && (
	<a class="text-center block mb-4 text-gray-600 rounded-xl py-2 px-4 hover:text-gray-700 hover:bg-gray-500/10 focus:bg-gray-500/20" href={event.url}>
		<h3 class="block text-2xl font-semibold underline ">{event.title}</h3>
		<span class="block text-2xl">{event.when}</span>
	</a>
)) || (
	<div class="text-center mb-4" href={event.url}>
		<h3 class="text-gray-600 block text-2xl font-semibold">{event.title}</h3>
		<span class="block text-gray-600 text-2xl">{event.when}</span>
	</div>
)}