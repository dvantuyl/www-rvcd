---
	const {title, img, bg} = Astro.props;
---

<div class={`container h-96 w-full min-w-full ${bg}`}>
	<div class="stack h-inner">
		<img class="object-cover object-center h-inner w-full" src={`/assets/images/${img}`} />
		<div class="bg-gray-900 w-full bg-opacity-50"></div>
		<div class="h-full flex justify-center items-center">
			<h1 class="font-heading text-white text-5xl font-black w-full tracking-widest opacity-90 text-center uppercase">
				{title}
			</h1>
		</div>
	</div>
</div>

<style>
	.container {
		--height: 24rem;
		--padding: 0.25rem;

		height: var(--height);
		padding: var(--padding) 0 0 0;
	}

	.h-inner {
		height: calc(var(--height) - (var(--padding))) 
	}


</style>