---
	const {title, img, bg} = Astro.props;
---

<div class={`container h-96 w-full min-w-full ${bg}`}>
	<div class="stack h-inner">
		<img class="object-cover object-center h-inner w-full" src={`/assets/images/${img}`} />
		<div class="bg-gray-900 w-full bg-opacity-50"></div>
		<div class="h-full flex justify-center items-center">
			<h1 class="font-heading text-white text-5xl font-black w-full tracking-widest opacity-90 text-center uppercase">
				{title}
			</h1>
		</div>
		<button class="place-self-end self-end mb-5 mr-5 opacity-50 hover:opacity-80">
			<svg class="fill-current text-white" xmlns="http://www.w3.org/2000/svg" height="30px" viewBox="0 0 24 24" width="30px"><path d="M0 0h24v24H0V0z" fill="none"/><path d="M11 7h2v2h-2zm0 4h2v6h-2zm1-9C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z"/></svg>
		</button>
	</div>
</div>

<style>
	.container {
		--height: 24rem;
		--padding: 0.25rem;

		height: var(--height);
		padding: var(--padding) 0 0 0;
	}

	.h-inner {
		height: calc(var(--height) - (var(--padding))) 
	}


</style>